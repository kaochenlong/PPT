<h1>新增文章</h1>

<%= form_with(model: @post, url: board_posts_path, local: true) do |form| %>

  <div class="fields">
    <%= form.label :title, "標題" %>
    <%= form.text_field :title %>
  </div>

  <div class="fields">
    <%= form.label :content, "內文" %>
    <%= form.text_area :content %>
  </div>

  <div class="fields">
    <%= form.label :hello, "內文" %>
    <%= form.rich_text_area :hello %>
  </div>

  <div class="fields">
    <%= form.label :photo, "附件" %>
    <%= form.file_field :photo %>
  </div>

  <%= form.submit %>
<% end %>